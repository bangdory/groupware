<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.groupware.erp.member.repository.MemberMapperRepository">

    <select id="memberList" parameterType="com.groupware.erp.member.dto.MemberMapperDTO"
                            resultType="com.groupware.erp.member.dto.MemberMapperDTO">
        SELECT
               member_no           AS memberNo
             , member_email        AS memberEmail
             , member_password     AS memberPassword
             , member_name         AS memberName
        FROM member
        <where>
            <if test="memberEmail != null and !memberEmail.equals('')">
                AND member_email = #{memberEmail}
            </if>
            <if test="memberName != null and !memberName.equals('')">
                AND memberName LIKE '%' || #{memberName} || '%'
            </if>
        </where>
    </select>
</mapper>